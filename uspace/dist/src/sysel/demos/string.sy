class StringDemo is
	fun Main(), static is
		-- Concatenate some strings.
		Console.WriteLine("One-" + "two-" + "three!");

		-- Extract characters from a string.
		var i : int;
		i = 0;
		while i < 5 do
			Console.WriteLine("ABCDE"[i]);
			i = i + 1;
		end

		Console.WriteLine("Abracadabra".Slice(2, 4));
	end
end
