{
        name : context,

        includes : [
                {
                        include : <stddef.h>
                },
                {
                        include : <stdint.h>
                }
        ],

        #
        # Save only registers that must be preserved across function calls.
        #
        members : [
                {
                        # %o6
                        name : sp,
                        type : uintptr_t
                },
                {
                        # %o7
                        name : pc,
                        type : uintptr_t
                },
                {
                        name : i0,
                        type : uint64_t
                },
                {
                        name : i1,
                        type : uint64_t
                },
                {
                        name : i2,
                        type : uint64_t
                },
                {
                        name : i3,
                        type : uint64_t
                },
                {
                        name : i4,
                        type : uint64_t
                },
                {
                        name : i5,
                        type : uint64_t
                },
                {
                        # %i6
                        name : fp,
                        type : uintptr_t
                },
                {
                        name : i7,
                        type : uintptr_t
                },
                {
                        name : l0,
                        type : uint64_t
                },
                {
                        name : l1,
                        type : uint64_t
                },
                {
                        name : l2,
                        type : uint64_t
                },
                {
                        name : l3,
                        type : uint64_t
                },
                {
                        name : l4,
                        type : uint64_t
                },
                {
                        name : l5,
                        type : uint64_t
                },
                {
                        name : l6,
                        type : uint64_t
                },
                {
                        name : l7,
                        type : uint64_t
                },
                {
                        # %g7
                        name : tp,
                        type : uint64_t
                }
        ]
}

